<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".OhYeah"
    android:id="@+id/inicio"
    android:background="#ffffffff"
    android:clickable="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Albergues"
        android:id="@+id/albergue_transitorio"
        android:shadowColor="#ffffffff"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:background="#FF6666"
        android:capitalize="words"
        android:textAlignment="center"
        android:width="200dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColorHint="#ffffb7a4"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/logo"
        android:layout_alignLeft="@+id/sex_shops"
        android:layout_alignStart="@+id/sex_shops"
        android:onClick="onClickTest"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex Shops"
        android:id="@+id/sex_shops"
        android:shadowColor="#ffffffff"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:background="#FF6666"
        android:capitalize="words"
        android:textAlignment="center"
        android:width="200dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColorHint="#ffffb7a4"
        android:layout_below="@+id/albergue_transitorio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_marginTop="78dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
